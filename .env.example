# Server environment
NODE_ENV=development
PORT=8000
LOG_LEVEL=debug

# Client origin allowed for CORS
CLIENT_ORIGIN=http://localhost:5173  # dev
#CLIENT_ORIGIN=https://your-production-client.com  # prod

# Database
DATABASE_URL=mongodb+srv://<user>:<password>@<cluster>/<db>?retryWrites=true&w=majority

# Auth
JWT_SECRET=your_super_secret_key
JWT_ACCOUNT_ACTIVATION=activation_secret
JWT_RESET_PASSWORD=reset_secret

# Mail
EMAIL_FROM=noreply.gardenalmanac@gmail.com
EMAIL_TO=noreply.gardenalmanac@gmail.com
GMAIL_PASSWORD=your_app_password

# OAuth
GOOGLE_CLIENT_ID=your_google_client_id

# 3rd-party APIs
UNSPLASH_ACCESS_KEY=your_unsplash_key